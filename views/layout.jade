doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title= data.title : Remax (Thailand)
		meta(name='description', content= data.description)
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
		link(rel='icon', href='/favicon.ico', type='image/x-icon')
		link(href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css', rel='stylesheet')
		link(href='https://cdn.powerdd.com/bootstrap/3.3.5/css/bootstrap.min.css', rel='stylesheet')
		link(href='https://cdn.powerdd.com/font-awesome/4.4.0/css/font-awesome.min.css', rel='stylesheet')
		link(href='/stylesheets/style.css', rel='stylesheet')
		script(src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.min.js')
	body
		input#api_url(type='hidden', value= data.api_url)
		input#api_key(type='hidden', value= data.api_key)
		input#api_url_new(type='hidden', value= data.api_url_new)
		.container
			nav.navbar.navbar-default.navbar-fixed-top.nav-shadow(role='navigation')
				.container
					.navbar-header
						button.navbar-toggle.collapsed(aria-controls='navbar', aria-expanded='false', data-target='#navbar', data-toggle='collapse', type='button')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href= data.system_url)
							img(src='https://img.powerdd.com/web/logo/remax.png')
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.(class= (data.screen == 'index' ? 'active' : ''))
								a(href= data.system_url) หน้าหลัก
							li.(class= (data.screen == 'about_us' ? 'active' : ''))
								a(href="data.system_url+'/about_us'") เกี่ยวกับเรา
							li(class=(data.screen == 'category' ? 'dropdown active' : 'dropdown'))
							a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
								| หมวดหมู่สินค้า 
								span.caret
							ul.dropdown-menu(role='menu')
								li(class=(data.screen == 'category' && data.categorySelected == new ? 'active' : ''))
									a(href= data.system_url+'/product/category/new') New Arrivals
								each values in data.category
									li(class=(data.screen == 'category' && data.categorySelected == values.url ? 'active' : ''))
										a(href='#{data.system_url}/category/'+values.url)= values.name
							li.(class= (data.screen == 'contact_us' ? 'active' : ''))
								a(href= data.system_url+'/contact_us') ติดต่อเรา
							li.(class= (data.screen == 'warranty_condition' ? 'active' : ''))
								a(href= data.system_url+'/warranty_condition') เงื่อนไขการรับประกัน
							li.(class= (data.screen == 'payment' ? 'active' : ''))
								a(href= data.system_url+'/payment') วิธีการชำระเงิน
						ul.nav.navbar-nav.navbar-right
							li
								a(href='https://24fin-backend.azurewebsites.net') เข้าสู่ระบบ/สมัครสมาชิก
		.bg-white
			.container.block-content.padding-top-20(role="main")
				block content
		
		footer
			.row
				.row.text-center
					img.img-responsive.center-block(src='https://img.powerdd.com/web/logo/dbd.png')
				.col-lg-12.text-center.margin-top-10
					p Copyright © 2015 Remax (Thailand) All rights reserved.
		
		script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.3/moment-with-locales.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js')	
		script(src='//cdn.powerdd.com/jquery/2.1.4/jquery.min.js')
		script(src='//cdn.powerdd.com/bootstrap/3.3.5/js/bootstrap.min.js')
		script(src='/scripts/js.cookie.js')
		script(src='/scripts/main.js')
		if (data.script != '')
			script(src='#{data.system_url}#{data.script}')
		