					| มือถือ: 098-9919-060
					br
					| แฟกซ์: +66 (0)2 295 3296
					br
					| อีเมล: service@powerdd.com 					
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js')		
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.3/moment-with-locales.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
		script(src='#{data.websiteUrl}/javascripts/facebook.js')
		script(src='#{data.websiteUrl}/javascripts/common.js')
		script(src='#{data.websiteUrl}/javascripts/plugins/scrollToFixed/jquery-scrolltofixed-min.js')
		if (data.script != '')
			script(src='#{data.websiteUrl}#{data.script}')
		
			
		