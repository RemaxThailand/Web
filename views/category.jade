extends layout

block content
	.row.pinRow
		if data.product != '' && data.product != undefined
			each values in data.product
				.pinItem
					.pinBox.pinWell.margin-bottom-15
						a(href='/product/'+values.name.replace('+','')+'-'+parseInt(values.product))
							img.img-responsive.img-popover(width='500', src= (typeof values.image != "undefined" && values.image != "") ? 'https://img.remaxthailand.co.th/300x300/product/'+values.sku+'/1.jpg' : 'https://src.remaxthailand.co.th/img/product/default.jpg')
						.message
							.margin-top-5.margin-bottom-5
								.text-center
									if values.isNew
										img(src='https://src.remaxthailand.co.th/img/web/gif/new.gif')
									b.text-info
										a(href='/product/'+values.name.replace('+','')+'-'+parseInt(values.product)) #{values.name}
								if values.sku != '' && values.sku.substr(0,1) == 'D'
									.margin-top-5.pull-left #{values.sku}
									.margin-top-5.pull-right.no-wrap
										if values.warranty > 0
											if values.warranty >= 365
												| รับประกัน #{values.warranty/365} ปี
											else if values.warranty >= 30
												| รับประกัน #{values.warranty/30} เดือน
											else
												| รับประกัน #{values.warranty} วัน
							.clearfix.line.margin-bottom-5
							.pull-left.no-wrap
								if values.stock <= 0 
									b.text-danger
										| สินค้าหมด 							
							.pull-right.no-wrap
								| ราคาส่ง(3 ชิ้น) 
								b.text-danger
									if values.price1 == 0
										| ยังไม่กำหนด
									else
										| #{values.price1}
								| บาท

							.clearfix